generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


  
model Contact {
  id        String   @id @default(uuid())
  ownerId   String
  contactId String
  alias     String? 
  createdAt DateTime @default(now())
  
  @@index([ownerId])
  // contact -> User is optional; we keep plain contactId so we can store phonebook entries
}

model Blocked {
  id         String   @id @default(uuid())
  ownerId    String
  blockedId  String
  createdAt  DateTime @default(now())

   @@index([ownerId])
}